@model Project.Models.User

@{
    ViewData["Title"] = "signup";
}


<style>
    .signup-background {
        background-image: url('https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTmqTniQGNaLc3PIyjbK8YiBBvy90qYouVf0A&sjpg');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
    }
</style>

<div class="signup-background">
    <div class="container">
       @*  <h1 class="text-center mt-4">Signup</h1>
        <h4 class="text-center">User</h4> *@
        <hr />
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow">
                    <div class="card-body">
                        <form asp-action="signup">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            <div class="form-group">
                                <label asp-for="UserName" class="control-label"></label>
                                <input asp-for="UserName" class="form-control" placeholder="Enter Username" />
                                <span asp-validation-for="UserName" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Email" class="control-label"></label>
                                <input asp-for="Email" class="form-control" placeholder="Enter Email" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Password" class="control-label"></label>
                                <input asp-for="Password" type="password" class="form-control" placeholder="Enter Password" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>

                            <div class="form-group text-center">
                                <input type="submit" value="Create Account" class="btn btn-primary btn-block" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



@if(ViewBag.Email != null)
{
    <div class="alert alert-danger col-lg-3">
        @ViewBag.Email
    </div>
}

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
